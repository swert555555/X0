<Window x:Class="WpfApPract1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApPract1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="458">

    <Grid>
        <Grid Margin="0,0,0,-26">
            <Grid.Background>
                <ImageBrush ImageSource="/крутая.jpg"/>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="39*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="100*"/>
                <RowDefinition Height="100"/>
                <RowDefinition Height="59.015"/>
            </Grid.RowDefinitions>
            <Grid HorizontalAlignment="Center" Height="300" VerticalAlignment="Center" Width="300" Grid.Row="2" Grid.RowSpan="3">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="88*"/>
                    <ColumnDefinition Width="213*"/>
                </Grid.ColumnDefinitions>
                <Button x:Name="k7" Height="100" VerticalAlignment="Top" Width="100" Click="k_Click" Margin="0,200,200,0" Grid.ColumnSpan="2">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="95"/>
                        </Style>
                    </Button.Resources>
                    <Grid Height="16" Width="5">
                        <TextBlock Text="-" VerticalAlignment="Center" />
                    </Grid>
                </Button>
                <Button x:Name="k5" Height="100" VerticalAlignment="Center" Width="100" Click="k_Click" Grid.Column="1" Margin="12,0,100,0">
